<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="7dp"
    android:backgroundTint="#ffffff"
    >


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <VideoView
            android:id="@+id/video_view"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Love Yourself - Justin Biber"
            android:textColor="#003569"
            android:typeface="serif"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:text="Love Yourself is a song recorded by Canadian singer Justin Bieber for his fourth studio album "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                >
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:src="@drawable/share_16"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/replay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/replay_16"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/play"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/play_16"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/stop_16"
                    android:layout_margin="5dp"
                    android:background="@null"
                    android:layout_weight="1"/>
            </LinearLayout>




        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>